{
  "manifest_version": 3,
  "name": "FB Group Scraper - Posts & Comentários",
  "version": "1.0",
  "description": "Salva posts e comentários de grupos do Facebook",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://www.facebook.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/groups/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
